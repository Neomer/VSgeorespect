<div id="infoMessageDialog" title="Текст сообщения">
    <p>
        <input type="text" value="" />
    </p>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <div>
                    <h4 class="bold">1. Введите адрес</h4>
                    <div class="search">
                        <input type="text" value="" placeholder="Введите адрес..." id="txtAddress" />
                        <input type="button" class="btn btn-default" value="Найти..." id="btnFindAddress" />
                    </div>
                </div>
            </div>
            <div class="row">
                <h4 class="bold">2. Выберите тип карт</h4>
                <div id="service_toolbar"></div>
            </div>
            <div class="row">
                <h4 class="bold">3. Инструмент для рисования</h4>
                <div id="toolbar"></div>
            </div>
            <div class="row">
                <span>Линия:</span>
                <select id="lineWeight">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <input type='text' id="lineColorPicker" />
                <span>Заливка:</span>
                <input type='text' id="fillColorPicker" />
            </div>
            <div class="row">
                <h4 class="bold">4. Выберите масштаб</h4>
                <div id="scale_selector"></div>
            </div>
            <div class="row">
                <h4 class="bold">5. Выберите дальнейшее действие</h4>
                <input type="button" class="btn btn-primary" value="Сохранить в PDF" onclick="SaveToPDF();" />
            </div>
        </div>
        <div class="col-md-8">
            <div id="map" style="width: 600px; height: 800px; margin: auto;"></div>
        </div>
    </div>
</div>

